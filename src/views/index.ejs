<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner"></div>
			<!-- /Banner -->

			<!-- ultima visita -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Basado en tu Ãºltima visita</h2>
					</div>
					<!-- Show the "visited" products -->
					<% visited.forEach(visit=> { %>
						<% if (visit.discount==0) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/detail/<%= visit.id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= visit.image %>" alt="imagen de producto">
										</figure>
										<article class="product-box_data">
											<h2>$ <%= toThousand(visit.price) %>
											</h2>
											<p>
												<%= visit.name %>
											</p>
											<i class="fas fa-truck"></i>
										</article>
									</a>
								</section>
							</div>
							<% } else { %>
								<div class="col-12 col-sm-6 col-lg-3">
									<section class="product-box">
										<a href="/products/detail/<%= visit.id %>">
											<figure class="product-box_image">
												<img src="/images/products/<%= visit.image %>" alt="imagen de producto">
											</figure>
											<article class="product-box_data">
												<h2>$ <%= toThousand(visit.price-(visit.price * visit.discount /100)) %>
												</h2>
												<span>
													<%= visit.discount %> % OFF
												</span>
												<p>
													<%= visit.name %>
												</p>
												<i class="fas fa-truck"></i>
											</article>
										</a>
									</section>
								</div>
								<% } %>
									<% }) %>
				</div>
			</div>
			<!-- /ultima visita -->

			<!-- Ofertas -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Ofertas</h2>
					</div>
					<!-- Show the "in-sale" products -->
					<% offers.forEach(offer=> { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detail/<%= offer.id %> ">
									<figure class="product-box_image">
										<img src="/images/products/<%= offer.image %>" alt="imagen de producto">
									</figure>
									<article class="product-box_data">
										<h2>$ <%= toThousand(offer.price-(offer.price * offer.discount /100)) %>
										</h2>
										<span>
											<%= offer.discount %> % OFF
										</span>
										<p>
											<%= offer.name %>
										</p>
										<i class="fas fa-truck"></i>
									</article>
								</a>
							</section>
						</div>
						<% }) %>
				</div>
			</div>
			<!-- /Ofertas -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>